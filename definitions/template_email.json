{
	"__name__": "Mouth_Template_Email",

	"_id": {
		"__type__": "uuid",
		"__optional__": true
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true
	},

	"template": {
		"__type__": "uuid"
	},

	"locale": {
		"__type__": "string",
		"__regex__": "^[a-z]{2}-[A-Z]{2}$"
	},

	"subject": {
		"__type__": "string",
		"__maximum__": 255
	},

	"text": {
		"__type__": "string",
		"__maximum__": 65535,
		"__ui__": {
			"title": "Plain Text",
			"type": "textarea"
		}
	},

	"html": {
		"__type__": "string",
		"__maximum__": 65535,
		"__ui__": {
			"title": "HTML",
			"type": "textarea"
		}
	}
}