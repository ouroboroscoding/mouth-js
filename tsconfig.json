{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es2017", "DOM"],
		"moduleResolution": "node",
		"noEmit": false,
		"outDir": "lib",
		"strict": true,
		"target": "esnext"
	},
	"include": ["./src"],
	"exclude": []
}